<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainMenu"
    android:background="@drawable/menu_background"
    >


    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="MorphIt, Bitch"
        android:textSize="50sp"
        android:id="@+id/buttonMorph"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:clickable="false"
        android:ellipsize="none"
        android:layout_alignParentEnd="false"
        android:height="150dp"
        android:shadowDx="5.0"
        android:background="@drawable/menu_button"/>



    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Doodle with Friends"
        android:textSize="50sp"
        android:id="@+id/buttonDoodleFriends"
        android:layout_below="@+id/buttonDoodle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:height="150dp"
        android:background="@drawable/menu_button"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Doodle"
        android:textSize="50sp"
        android:id="@+id/buttonDoodle"
        android:layout_below="@+id/buttonMorph"
        android:layout_centerHorizontal="true"
        android:height="150dp"
        android:background="@drawable/menu_button"/>
</RelativeLayout>
